<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.addressbook.HelloController">
<!--      style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed"-->

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to the Address Book Application.
  You must agree to the following terms and conditions before you can use the application."
    wrapText="true"/>
    <TextArea fx:id="termsAndCondtionsTextArea" wrapText="true" editable="false"/>
    <CheckBox fx:id="agreeCheckBox" text="I agree to the terms and conditions."
                onAction="#onAgreeCheckBoxClick"/>
    <HBox alignment="BOTTOM_RIGHT" spacing="10">
<!--          style="-fx-border-color: red; -fx-border-width: 3; -fx-border-style: dashed"-->
        <Button fx:id="cancelButton" onAction="#onCancelButtonClick" prefWidth="60" text="Cancel"/>
        <Button fx:id="nextButton" onAction="#onNextButtonClick" prefWidth="60" text="Next" disable="true"/>
    </HBox>
</VBox>
